<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

    <ui:with field="i18n"
             type="org.jbpm.console.ng.pr.client.i18n.Constants"/>


    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_12">
                <b:FieldSet>
                    <b:Form type="HORIZONTAL">
                        <b:FormGroup>
                            <b:FormLabel for="variableNameTextBox" addStyleNames="col-md-3">
                                <ui:text from="{i18n.Variables_Name}"/>
                            </b:FormLabel>
                            <b:Column size="MD_9">
                                <b:FormControlStatic ui:field="variableNameTextBox"/>
                            </b:Column>
                        </b:FormGroup>


                        <b:FormGroup>
                            <b:FormLabel for="variableValueTextBox" addStyleNames="col-md-3">
                                <ui:text from="{i18n.Variable_Value}"/>
                            </b:FormLabel>
                            <b:Column size="MD_9">
                                <b:TextBox ui:field="variableValueTextBox" placeholder="{i18n.Variable_Value}"/>
                            </b:Column>
                        </b:FormGroup>
                    </b:Form>
                </b:FieldSet>

                <b:FormGroup ui:field="errorMessagesGroup">
                    <b:HelpBlock ui:field="errorMessages"/>
                </b:FormGroup>
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>